---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import { Picture } from "@astrojs/image/components";
import { getAbout } from "@utils/sanity";
import { urlFor } from "../utils/image";

const about = await getAbout();
---

<Layout title="About">
  <Container>
    <div class="mb-8">
      <Picture
        src={urlFor(about.mainImage).url()}
        alt={about.alt}
        sizes="(max-width: 1800px) 100vw, 1800px"
        widths={[200, 400, 800, 1200, 1800]}
        aspectRatio="16:9"
        background="#ffffff"
        fit="cover"
        position="center"
        class="object-cover w-full h-48 md:h-96 rounded-lg shadow-lg overflow-hidden"
      />
    </div>
    <h1
      class="mb-4 text-3xl font-extrabold text-gray-900 dark:text-white md:text-5xl lg:text-6xl"
    >
      <span
        class="text-transparent bg-clip-text bg-gradient-to-r to-red-600 from-red-400"
        >{about.titlePart1}</span
      >
      {about.titlePart2}
    </h1>

    <p class="mb-3 text-lg text-gray-500 md:text-xl dark:text-gray-400">
      {about.subTitle}
    </p>

    <p class="my-4 text-lg text-gray-600 dark:text-gray-400">
      {about.excerpt}
    </p>

    <h2 class="text-4xl font-extrabold dark:text-white">About Us</h2>
    <p class="my-4 text-lg text-gray-600 dark:text-gray-400">
      {about.aboutBody}
    </p>

    <h2 class="text-4xl font-extrabold dark:text-white">Method Statement</h2>
    <p class="my-4 text-lg text-gray-600 dark:text-gray-400">
      {about.methodBody}
    </p>

    <h2 class="text-4xl font-extrabold dark:text-white">
      Environmental statement
    </h2>
    <p class="my-4 text-lg text-gray-600 dark:text-gray-400">
      {about.environmentBody}
    </p>
  </Container>
</Layout>

<style>
  img {
    object-position: center 75%;
  }
</style>
