---
import { urlFor } from "../utils/image";
import type { Gallery } from "../utils/sanity";

interface GalleryProps extends Gallery {
  show?: "stacked" | "inline" | "carousel"; // Define the show prop with specific string values
}

const { images, zoom, show } = Astro.props as GalleryProps;
console.log("Gallery component props:", images, zoom, show);

const galleryStyles: Record<string, string> = {
  stacked: "flex flex-col gap-4",
  inline: "flex flex-wrap gap-4",
  carousel: "carousel-container", // You can add your own carousel styles or use a library
};

const galleryStyle = galleryStyles[show || "inline"];
---

<section class={`gallery ${galleryStyle}`}>
  {
    images.map((image, index) => {
      const imageUrl = urlFor(image.asset)?.url() || "/247.png";
      return (
        <div class="gallery-item">
          <img
            src={imageUrl}
            alt={image.alt || "Gallery image"}
            data-index={index}
            class={zoom ? "zoom-enabled max-h-96 object-cover" : ""}
          />
        </div>
      );
    })
  }
</section>

<!-- Modal for zoomed image -->
<div id="zoomModal" class="modal">
  <span class="close">&times;</span>
  <span class="prev">&#10094;</span>
  <span class="next">&#10095;</span>
  <img class="modal-content" id="zoomedImage" />
  <div id="caption"></div>
</div>

<style>
  .gallery {
    display: flex;
    gap: 1rem;
  }

  .gallery.stacked {
    flex-direction: column;
  }

  .gallery.inline {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: masonry;
    gap: 1rem;
  }

  .gallery img {
    width: 100%;
    height: auto;
  }

  .gallery-item {
    overflow: hidden;
    position: relative;
  }

  .gallery-item img.zoom-enabled {
    cursor: zoom-in;
  }

  /* Modal styles */
  .modal {
    display: none;
    position: fixed;
    z-index: 1000;
    padding-top: 60px;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgb(0, 0, 0);
    background-color: rgba(0, 0, 0, 0.9);
  }

  .modal-content {
    margin: auto;
    display: block;
    width: 80%;
    max-width: 700px;
    max-height: 80%;
    object-fit: contain;
  }

  #caption {
    margin: auto;
    display: block;
    width: 80%;
    max-width: 700px;
    text-align: center;
    color: #ccc;
    padding: 10px 0;
  }

  .close,
  .prev,
  .next {
    position: absolute;
    top: 50%;
    color: #f1f1f1;
    font-size: 40px;
    font-weight: bold;
    transition: 0.3s;
    user-select: none;
  }

  .close {
    top: 15px;
    right: 35px;
  }

  .close:hover,
  .close:focus,
  .prev:hover,
  .prev:focus,
  .next:hover,
  .next:focus {
    color: #bbb;
    text-decoration: none;
    cursor: pointer;
  }

  .prev {
    left: 15px;
  }

  .next {
    right: 15px;
  }
</style>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const zoomEnabled = true;
    console.log("Zoom enabled: ", zoomEnabled);
    if (zoomEnabled) {
      const zoomEnabledImages = document.querySelectorAll(".zoom-enabled");
      const modal = document.getElementById("zoomModal");
      const modalImg = document.getElementById("zoomedImage");
      const captionText = document.getElementById("caption");
      let currentIndex = 0;

      console.log("Zoom-enabled images:", zoomEnabledImages);

      zoomEnabledImages.forEach((img, index) => {
        img.addEventListener("click", () => {
          console.log("Image clicked:", img.src); // Log when an image is clicked
          currentIndex = index;
          openModal(img);
        });
      });

      const openModal = (img) => {
        modal.style.display = "block";
        modalImg.src = img.src;
        captionText.innerHTML = img.alt;
      };

      const closeModal = () => {
        modal.style.display = "none";
      };

      const showPrevImage = () => {
        currentIndex =
          currentIndex > 0 ? currentIndex - 1 : zoomEnabledImages.length - 1;
        const prevImg = zoomEnabledImages[currentIndex];
        openModal(prevImg);
      };

      const showNextImage = () => {
        currentIndex =
          currentIndex < zoomEnabledImages.length - 1 ? currentIndex + 1 : 0;
        const nextImg = zoomEnabledImages[currentIndex];
        openModal(nextImg);
      };

      document.getElementsByClassName("close")[0].onclick = closeModal;
      document.getElementsByClassName("prev")[0].onclick = showPrevImage;
      document.getElementsByClassName("next")[0].onclick = showNextImage;

      modal.onclick = (event) => {
        if (event.target === modal) {
          closeModal();
        }
      };
    }
  });

  console.log("Gallery component loaded");
</script>
